<script>
    function jsSendInfoMail2() {
        var email = $("#email2").val();
        if (email == "") {
            $("#errorMessage").html('Lütfen e-posta alanını doldurunuz');
            return;
        }

        if (!checkEmailAddress(email)) {
            $("#errorMessage").html('Lütfen uygun formatta bir e-posta giriniz ');
            return;
        }

        $.ajax({
            url: "/Home/SendInfoMail",
            type: "POST",
            data: { Mail: email },
            success: function (result) {
                if (result > 0) {
                    $("#errorMessage").html('');
                    $("#email2").val('');
                } else {
                    alert('İşleminiz başarısız');
                }
            },
            error: function () {
                alert('İşleminiz başarısız');
            }

        })
    }

    function checkEmailAddress(emailAddress) {
        var reg = new RegExp(/^[^0-9][a-zA-z0-9_]+([.][a-zA-z0-9_]+)*[@@][a-zA-z0-9_]+([.][a-zA-z0-9_]+)*[.][a-zA-Z]{2,4}$/i);
        return reg.test(emailAddress);
    };

</script>