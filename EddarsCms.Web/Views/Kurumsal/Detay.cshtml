    <div class="container text-center">
        <div class="row">
            <div class="swiper-slider-clients swiper-container white-move swiper-container-initialized swiper-container-horizontal">
                <div class="swiper-wrapper" style="transform: translate3d(-1170px, 0px, 0px); transition-duration: 0ms;">
                    @if (referances != null)
                    {
                        if (referances.Count > 0)
                        {
                            foreach (var item in referances)
                            {
                                <!-- start slide item-->
                                <div class="swiper-slide text-center" style="padding-right:40px; width: 292.5px" >
                                    <a href="#">
                                        <img src="~/Images/Referances/@item.Image" alt="" data-no-retina="">
                                    </a>
                                    <div>@item.Name</div>
                                </div><!-- end slide item -->
                            }
                        }
                    }



                </div>
                <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
            </div>
        </div>
    </div>
</section>
