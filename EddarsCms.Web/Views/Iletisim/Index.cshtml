
@using EddarsCms.UserSides

@{
    var contactInfo = Fronted.GetContactInfo();
    var fixedArea = Fronted.GetFixedArea();
    var socialMedias = Fronted.SocialMediaList();
    var coverImage = Fronted.GetCoverImages().Contact;
}

@*<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>*@
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


<meta name="title" content="" />
<meta name="description" content="" />

<!-- start page title section -->
<section class="wow fadeIn parallax" data-stellar-background-ratio="0.5" style="background-image:url('/Images/CoverImages/@coverImage');">
    <div class="opacity-medium bg-extra-dark-gray"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 extra-small-screen page-title-large d-flex flex-column justify-content-center text-center">
                <!-- start page title -->
                <h1 class="text-white-2 alt-font font-weight-600 letter-spacing-minus-1 margin-15px-bottom">@fixedArea.AnaSayfaIletisim</h1>
                <!-- end page title -->
                <!-- start sub title -->
                @*<span class="text-white-2 opacity6 alt-font">Unlimited power and customization possibilities</span>*@
                <!-- end sub title -->
            </div>
        </div>
    </div>
</section>
<!-- end page title section -->
<!-- start contact info -->
<section class="wow fadeIn">
    <div class="container px-0">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-4 col-md-8 margin-eight-bottom md-margin-40px-bottom sm-margin-30px-bottom text-center last-paragraph-no-margin">
                <h5 class="alt-font font-weight-700 text-extra-dark-gray mb-0">@fixedArea.IletisimBilgiBaslik</h5>
            </div>
        </div>
        <div class="row">
            <!-- start contact info item -->
            <div class="col-12 col-lg-4 col-md-12 text-center md-margin-eight-bottom sm-margin-30px-bottom wow fadeInUp last-paragraph-no-margin">
                <div class="d-inline-block margin-20px-bottom">
                    <div class="bg-extra-dark-gray icon-round-medium"><i class="icon-map-pin icon-medium text-white-2"></i></div>
                </div>
                <div class="text-extra-dark-gray text-small font-weight-600 alt-font margin-5px-bottom">@fixedArea.IletisimAdresBaslik</div>
                <p class="mx-auto">@contactInfo.Adress</p>
            </div>
            <!-- end contact info item -->
            <!-- start contact info item -->
            <div class="col-12 col-lg-4 col-md-12 text-center md-margin-eight-bottom sm-margin-30px-bottom wow fadeInUp last-paragraph-no-margin" data-wow-delay="0.2s">
                <div class="d-inline-block margin-20px-bottom">
                    <div class="bg-extra-dark-gray icon-round-medium"><i class="icon-chat icon-medium text-white-2"></i></div>
                </div>
                <div class="text-extra-dark-gray text-small font-weight-600 alt-font margin-5px-bottom">@fixedArea.AnaSayfaIletisim</div>
                <p class="mx-auto">Phone: @contactInfo.Phone1<br>Fax: @contactInfo.Fax</p>
            </div>
            <!-- end contact info item -->
            <!-- start contact info item -->
            <div class="col-12 col-lg-4 col-md-12 text-center sm-margin-30px-bottom wow fadeInUp last-paragraph-no-margin" data-wow-delay="0.4s">
                <div class="d-inline-block margin-20px-bottom">
                    <div class="bg-extra-dark-gray icon-round-medium"><i class="icon-envelope icon-medium text-white-2"></i></div>
                </div>
                <div class="text-extra-dark-gray text-small font-weight-600 alt-font margin-5px-bottom">@fixedArea.IletisimEMailBaslik</div>
                <p class="mx-auto">@contactInfo.EMail</p>
            </div>
            <!-- end contact info item -->
            @*<!-- start contact info item -->
                <div class="col-12 col-lg-3 col-md-6 text-center wow fadeInUp last-paragraph-no-margin" data-wow-delay="0.6s">
                    <div class="d-inline-block margin-20px-bottom">
                        <div class="bg-extra-dark-gray icon-round-medium"><i class="icon-megaphone icon-medium text-white-2"></i></div>
                    </div>
                    <div class="text-extra-dark-gray text-uppercase text-small font-weight-600 alt-font margin-5px-bottom">Customer Services</div>
                    <p class="mx-auto">Lorem Ipsum is simply dummy<br>text of the printing.</p>
                    <a href="#" class="text-decoration-line-through-deep-pink text-uppercase text-deep-pink text-small margin-15px-top sm-margin-10px-top d-inline-block">open ticket</a>
                </div>
                <!-- end contact info item -->*@
        </div>
    </div>
</section>
<!-- end contact info section -->
<!-- start contact form -->
<section id="contact" class="wow fadeIn p-0 bg-extra-dark-gray">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-6 p-0 md-height-400px wow fadeIn">
                <iframe class="w-100 h-100" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.843821917424!2d144.956054!3d-37.817127!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d4c2b349649%3A0xb6899234e561db11!2sEnvato!5e0!3m2!1sen!2sin!4v1427947693651"></iframe>
            </div>
            <div class="col-12 col-lg-6 text-center padding-six-lr padding-five-half-tb md-padding-ten-half-tb md-padding-twelve-half-lr sm-padding-15px-lr wow fadeIn">
                <div class="text-medium-gray alt-font text-small text-uppercase margin-5px-bottom sm-margin-three-bottom"></div>
                <h5 class="margin-55px-bottom text-white-2 alt-font font-weight-700 sm-margin-ten-bottom">@fixedArea.IletisimFormBaslik</h5>
                @using (Ajax.BeginForm("SendMail", "Iletisim", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "message" }))
                {
                    <div id="message"></div>

                    <div class="row">
                        <div class="col-12">
                            <div id="success-project-contact-form" class="mx-0"></div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <input type="text" name="name" id="name" required placeholder="@fixedArea.IletisimIsim" class="bg-transparent border-color-medium-dark-gray medium-input">
                        </div>
                        <div class="col-12 col-lg-6">
                            <input type="text" name="caption" id="caption" placeholder="@fixedArea.IletisimKonu " class="bg-transparent border-color-medium-dark-gray medium-input">
                        </div>
                        <div class="col-12 col-lg-6">
                            <input type="text" name="phone" id="phone" placeholder="@fixedArea.IletisimTelefon" class="bg-transparent border-color-medium-dark-gray medium-input">
                        </div>
                        <div class="col-12 col-lg-6">
                            <input type="email" name="mail" id="mail" required placeholder="@fixedArea.IletisimEMail" class="bg-transparent border-color-medium-dark-gray medium-input">
                        </div>

                        <div class="col-12">
                            <textarea name="content" id="content" required placeholder="@fixedArea.IletisimMesaj" rows="7" class="bg-transparent border-color-medium-dark-gray medium-textarea"></textarea>
                        </div>
                        <div id="errorMessage"></div>
                        <div class="col-12 text-center">
                            <button  type="submit" class="btn btn-deep-pink btn-medium margin-15px-top">@fixedArea.IletisimGonder</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- end contact form -->
<!-- start social section -->
<section class="wow fadeIn">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center social-style-1 social-icon-style-5">
                <ul class="large-icon mb-0">
                    @if (socialMedias != null)
                    {
                        if (socialMedias.Count > 0)
                        {
                            foreach (var item in socialMedias)
                            {

                                <li><a href="@item.Url" target="_blank"><i class="fab fa-@item.Icon"></i><span></span></a></li>
                            }
                        }
                    }

                </ul>
            </div>
        </div>
    </div>
</section>
<!-- end social section -->
