<script>

    $("#ac").change(function () {
        var id = $("#id").val();
        if (this.checked) {
            $.ajax({
                url: "/BlogComment/ChangeState/",
                type: "POST",
                data: { id: id, state: "True" },
                success: function (result) {
                    if (result.State != 1) {
                        jsError(result.Message);
                    }
                    else {
                        jsSuccess(result.Message);
                        btn.attr("data-state", "True");
                        btn.text("Aktif")
                        btn.removeClass("btn-danger");
                        btn.addClass("btn-success");
                    }
                }
            })
        }
        else {
            



            $.ajax({
                url: "/BlogComment/ChangeState/",
                type: "POST",
                data: { id: id, state: "False" },
                success: function (result) {
                    if (result.State != 1) {
                        jsError(result.Message);
                    }
                    else {
                        jsSuccess(result.Message);
                        btn.attr("data-state", "False");
                        btn.text("Pasif")
                        btn.removeClass("btn-success");
                        btn.addClass("btn-danger");
                    }
                }
            })
        }
    });

    $(function () {
        if ('@Model.State' == "True") {
            $("#ac").prop('checked', true);
            $("#acHidden").val("true");
        } else {
            $("#ac").prop('checked', false);
            $("#acHidden").val("false");
        }
    })


</script>
