    $("#LanguageId").change(function () {
        var langId = $(this).val();
        $.ajax({
            url: "/BlogComment/GetByLangId",
            type: "POST",
            data: { id: langId },
            success: function (result) {
                if (result.State == 1) {
                    $("table tbody").html("");
                    $.each(result.Result, function (i, v) {


                        var row = " <tr id='row-" + v.Id + "' data-langId='lang-" + v.LanguageId + "' data-id='" + v.Id + "'><td>" + v.Caption + "</td><td width='10%' class='rowNumber'>" + v.RowNumber + "</td><td width='16%'><button style='margin:2px' onclick='jsDelete(" + v.Id + ")' class='btn btn-danger'>Sil</button><a style='margin:2px' href='/BlogComment/Edit/" + v.Id + "' class='btn btn-warning'>Düzenle</a></td></tr>";

                        $("table tbody").append(row);

                    })


                } else {
                    jsError(result.Message);
                }
            }
        })
    })


    function jsChangeState(id) {
        var btn = $("#btn-" + id);
        var state = btn.attr("data-state");
        if (state.toLowerCase() == "true") {
            $.ajax({
                url: "/BlogComment/ChangeState/",
                type: "POST",
                data: { id: id, state: "False" },
                success: function (result) {
                    if (result.State != 1) {
                        jsError(result.Message);
                    }
                    else {
                        jsSuccess(result.Message);
                        btn.attr("data-state", "False");
                        btn.text("Pasif")
                        btn.removeClass("btn-success");
                        btn.addClass("btn-danger");
                    }
                }
            })
        }
        else {
            $.ajax({
                url: "/BlogComment/ChangeState/",
                type: "POST",
                data: { id: id, state: "True" },
                success: function (result) {
                    if (result.State != 1) {
                        jsError(result.Message);
                    }
                    else {
                        jsSuccess(result.Message);
                        btn.attr("data-state", "True");
                        btn.text("Aktif")
                        btn.removeClass("btn-danger");
                        btn.addClass("btn-success");
                    }
                }
            })
        }
    }


</script>

