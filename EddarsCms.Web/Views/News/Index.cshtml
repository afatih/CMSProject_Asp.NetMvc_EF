@using EddarsCms.Dto.BasicDtos
@using EddarsCms.BLL.Services

@model List<NewsDto>
@{
    ViewBag.Title = "Haberler";
    ViewBag.PageTitle = "Haberler";

    LanguageService langServ = new LanguageService();
    var languages = langServ.GetAll().Result;

}


<div class="row">
    <div class="col-sm-8 float-left">
        <a href="@Url.Action("Create","News")" class="btn btn-primary">Yeni ekle</a>
    </div>
    <div class="form-group float-right col-sm-4">
        <label for="LanguageId" class="col-sm-3 control-label" style="padding-top: 8px;padding-left:40px">Dil</label>
        <div class="col-sm-6">
            <select class="form-control" id="LanguageId" name="LanguageId">
                @if (languages != null)
                {
                    if (languages.Count > 0)
                    {
                        foreach (var language in languages)
                        {
                            <option value="@language.Id">@language.Name</option>
                        }
                    }
                }
            </select>
        </div>
    </div>
</div>

@Html.Raw(ViewBag.Message)

<div class="col-lg-12">
    <table class="table">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Resim</th>
                <th>Sıra No</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr id="row-@item.Id" data-langId="lang-@item.LanguageId" data-id="@item.Id">
                            <td>@item.Caption</td>
                            <td style="width:10%"><img style="width:40%" src="~/Images/Newss/@item.Image" /></td>
                            <td class="rowNumber">@item.RowNumber</td>
                            <td>
                                <button onclick="jsDelete(@item.Id)" class="btn btn-danger">Sil</button>
                                <a href="@Url.Action("Edit","News",new {id=item.Id })" class="btn btn-success">Düzenle</a>
                            </td>


                        </tr>

                    }
                }
            }
        </tbody>
    </table>


</div>



<script>
    function jsDelete(id) {
        $.ajax({
            url: "/News/Delete", type: "POST", data: { id: id }, success: function (result) {
                if (result.State != 1) {
                    jsError(result.Message);

                }
                else {
                    jsSuccess(result.Message);
                    $("#row-" + id).remove();
                }
            }
        })
    }


    $(function () {
        var langId = "lang-" + $("select#LanguageId.form-control").val();
        $.each($("tbody tr"), function () {
            var rowLangId = $(this).attr("data-langId")
            if (langId != rowLangId) {
                $(this).hide();
            } else {
                $(this).show();
            }
        })
    })


    $("select#LanguageId.form-control").change(function () {
        var langId = "lang-" + $(this).val();

        $.each($("tbody tr"), function () {
            var rowLangId = $(this).attr("data-langId")
            if (langId != rowLangId) {
                $(this).hide();
            } else {
                $(this).show();
            }

        })

    })



    var arr = new Array();


    //tabloyu sortable yapıyoruz..
    $("table tbody").sortable({
        update: function (event, ui) {
            $(this).children().each(function (index) {
                $(this).find('td.rowNumber').html(index + 1)
                var id = $(this).attr("data-id");
                var rowNumber = $(this).find('td.rowNumber').html()


                //mevcut id ve sıra numarasını bir listeye atıyoruz.
                arr.push({ "id": id, "rowNumber": rowNumber });
            });
            console.log(arr);

            $.ajax({
                url: "/News/Reorder/",
                type: "POST",
                data: { list: arr },
                success: function (result) {
                    if (result.State == 1) {
                        arr = [];
                        console.log(result)
                        jsSuccess(result.Message);

                    } else {
                        console.log(result)
                        jsError(result.Message);

                    }
                }
            })
        }
    });



</script>

