@using EddarsCms.UserSides
@using EddarsCms.Common

@{
    var socialMedias = Fronted.SocialMediaList();
    var contactInfo = Fronted.GetContactInfo();
    var blog3 = Fronted.BlogList().OrderByDescending(x => x.Id).Take(3).ToList();
}


<!-- start footer -->
<footer class="footer-classic-dark bg-extra-dark-gray padding-five-bottom sm-padding-30px-bottom">
    <div class="bg-dark-footer padding-50px-tb sm-padding-30px-tb">
        <div class="container">
            <div class="row align-items-center">
                <!-- start slogan -->
                <div class="col-lg-4 col-md-5 text-center alt-font sm-margin-15px-bottom">
                    London based highly creative studio
                </div>
                <!-- end slogan -->
                <!-- start logo -->
                <div class="col-lg-4 col-md-2 text-center sm-margin-10px-bottom">
                    <a href="index.html"><img class="footer-logo" src="~/Images/ContactInfos/@contactInfo.Image" data-rjs="images/logo-white@2x.png" alt="Pofo"></a>
                </div>
                <!-- end logo -->
                <!-- start social media -->
                <div class="col-lg-4 col-md-5 text-center">
                    <span class="alt-font margin-20px-right">On social networks</span>
                    <div class="social-icon-style-8 d-inline-block vertical-align-middle">
                        <ul class="small-icon mb-0">
                            @if (socialMedias != null)
                            {
                                if (socialMedias.Count > 0)
                                {
                                    foreach (var item in socialMedias)
                                    {
                                        //class facebook vardı onceden sildik
                                        <li><a class="instagram text-white-2" href="@item.Url" target="_blank"><i class="fab fa-@item.Icon"></i></a></li>
                                    }
                                }
                            }


                        </ul>
                    </div>
                </div>
                <!-- end social media -->
            </div>
        </div>
    </div>
    <div class="footer-widget-area padding-five-top padding-30px-bottom sm-padding-30px-top">
        <div class="container">
            <div class="row">
                <!-- start about -->
                <div class="col-lg-3 col-md-6 widget md-margin-30px-bottom text-center text-md-left last-paragraph-no-margin">
                    <div class="widget-title alt-font text-small text-medium-gray text-uppercase margin-15px-bottom font-weight-600">Hakkımızda</div>
                    <p class="text-small width-95 sm-width-100">@contactInfo.Description</p>
                </div>
                <!-- end about -->
                <!-- start blog post -->
                <div class="col-lg-3 col-md-6 widget md-margin-30px-bottom">
                    <div class="widget-title alt-font text-small text-medium-gray text-uppercase margin-15px-bottom font-weight-600 text-center text-md-left">En Son Eklenen Bloglar</div>
                    <ul class="latest-post position-relative">
                        @if (blog3 != null)
                        {
                            if (blog3.Count > 0)
                            {
                                foreach (var item in blog3)
                                {
                                    <li class="media border-bottom border-color-medium-dark-gray">
                                        <figure>
                                            <a href="@Url.Action("Detay","Bloglar",new {id=item.Id,url=item.Url })"><img style="width:60px" src="~/Images/Blogs/@item.ImageBig" alt=""></a>
                                        </figure>
                                        <div class="media-body text-small"><a href="@Url.Action("Detay","Bloglar",new {id=item.Id,url=item.Url })" class="d-block mb-1">@item.Caption</a> <span class="clearfix"></span>@item.CreatedDate.ToString("dd MMMM yyyy")| by <a href="blog-grid.html">Herman Miller</a></div>
                                    </li>
                                }

                            }
                        }

                    </ul>
                </div>
                <!-- end blog post -->
                <!-- start newsletter -->
                <div class="col-lg-3 col-md-6 widget md-margin-30px-bottom text-center text-md-left">
                    <div class="widget-title alt-font text-small text-medium-gray text-uppercase margin-15px-bottom font-weight-600">Bizden Haberdar Olun</div>
                    <p class="text-small width-90 sm-width-100">Şirketimizle alakalı güncel gelişmeleri takip edebilmek için aşağıdaki alanı doldurunuz...</p>
                    <form id="subscribenewsletterform" action="javascript:void(0)" method="post">
                        <div class="position-relative newsletter width-95">
                            <div id="success-subscribe-newsletter" class="mx-0"></div>
                            <input type="text" id="email" name="email" class="bg-transparent text-small m-0 border-color-medium-dark-gray" placeholder="E Posta adresinizi giriniz...">
                            <button id="button-subscribe-newsletter" onclick="jsSendInfoMail()" type="submit" class="btn btn-arrow-small position-absolute border-color-medium-dark-gray"><i class="fas fa-caret-right no-margin-left"></i></button>
                        </div>
                    </form>
                </div>
                <!-- end newsletter -->
                <!-- start instagram -->
                <div class="col-lg-3 col-md-6 widget md-margin-5px-bottom text-center text-md-left">
                    <div class="widget-title alt-font text-small text-medium-gray text-uppercase margin-20px-bottom font-weight-600">Follow us Instagram</div>
                    <div class="instagram-follow-api">
                        <ul id="instaFeed-footer"></ul>
                    </div>
                </div>
                <!-- end instagram -->
            </div>
        </div>
    </div>
    <div class="container">
        <div class="footer-bottom border-top border-color-medium-dark-gray padding-30px-top">
            <div class="row">
                <!-- start copyright -->
                <div class="col-lg-6 col-md-6 text-small text-md-left text-center">POFO - Portfolio Concept Theme</div>
                <div class="col-lg-6 col-md-6 text-small text-md-right text-center">&COPY; 2019 POFO is Proudly Powered by <a href="http://www.themezaa.com/" target="_blank" title="ThemeZaa">ThemeZaa</a></div>
                <!-- end copyright -->
            </div>
        </div>
    </div>
</footer>
<!-- end footer -->


<script>
    function jsSendInfoMail() {
        var email = $("#email").val();
        $.ajax({
            url: "/Home/SendInfoMail",
            type: "POST",
            data: { Mail: email },
            success: function (result) {
                if (result > 0) {
                    jsSuccess('İşleminiz başarılı')
                    $("#email").val('')
                } else {
                    jsError('İşleminiz başarısız')
                }
            },
            error: function () {
                jsError('İşleminiz başarısız')
            }

        })
    }

</script>