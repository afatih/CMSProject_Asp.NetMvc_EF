@using EddarsCms.Dto.BasicDtos
@using EddarsCms.BLL.Services

@model List<PageDto>
@{
    ViewBag.Title = "Sayfalar";
    ViewBag.PageTitle = "Sayfalar";

    LanguageService langServ = new LanguageService();
    var languages = langServ.GetAll().Result;



}

<div class="row">

    <div class="col-sm-8 float-left">
        <a href="@Url.Action("Create","Page")" class="btn btn-primary">Yeni ekle</a>
    </div>
    <div class="form-group float-right col-sm-4">
        <label for="LanguageId" class="col-sm-3 control-label" style="padding-top: 8px;padding-left:40px">Dil</label>
        <div class="col-sm-6">
            <select class="form-control" id="LanguageId" name="LanguageId">
                @if (languages != null)
                {
                    if (languages.Count > 0)
                    {
                        foreach (var language in languages)
                        {
                            <option value="@language.Id">@language.Name</option>
                        }
                    }
                }
            </select>
        </div>
    </div>
</div>



@Html.Raw(ViewBag.Message)

<div class="col-lg-12">
    <table class="table">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Url</th>
                <th>Durum</th>
                <th>Resim</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr id="row-@item.Id" data-langId="lang-@item.LanguageId">
                            <td>@item.Caption</td>
                            <td>@item.Url</td>
                            @if (item.State == true)
                            {
                                <td><button class="btn btn-success" onclick="jsChangeState(@item.Id)" id="btn-@item.Id" data-state='@item.State'>Aktif</button></td>
                            }
                            else
                            {
                                <td><button class="btn btn-danger" onclick="jsChangeState(@item.Id)" id="btn-@item.Id" data-state='@item.State'>Pasif</button></td>

                            }
                            <td style="width:10%"><button onclick="jsDelete(@item.Id)" class="btn btn-danger">Sil</button></td>
                            <td style="width:10%"><a href="@Url.Action("Edit","Page",new {id=item.Id })" class="btn btn-success">Düzenle</a></td>
                        </tr>

                    }
                }
            }
        </tbody>
    </table>


</div>



<script>

    function jsChangeState(id) {
        var btn = $("#btn-" + id);
        var state = btn.attr("data-state");
        if (state == "True") {
            $.ajax({
                url: "/Page/ChangeState/",
                type: "POST",
                data: { id: id, state: "False" },
                success: function (result) {
                    if (result.State != 1) {
                        jsError(result.Message);
                    }
                    else {
                        jsSuccess(result.Message);
                        btn.attr("data-state", "False");
                        btn.text("Pasif")
                        btn.removeClass("btn-success");
                        btn.addClass("btn-danger");
                    }
                }
            })
        }
        else {
            $.ajax({
                url: "/Page/ChangeState/",
                type: "POST",
                data: { id: id, state: "True" },
                success: function (result) {
                    if (result.State != 1) {
                        jsError(result.Message);
                    }
                    else {
                        jsSuccess(result.Message);
                        btn.attr("data-state", "True");
                        btn.text("Aktif")
                        btn.removeClass("btn-danger");
                        btn.addClass("btn-success");
                    }
                }
            })
        }
    }




    function jsDelete(id) {
        $.ajax({
            url: "/Page/Delete", type: "POST", data: { id: id }, success: function (result) {
                if (result.State != 1) {
                    jsError(result.Message);

                }
                else {
                    jsSuccess(result.Message);
                    $("#row-" + id).remove();
                }
            }
        })
    }

    $(function () {
        var langId = "lang-" + $("select#LanguageId.form-control").val();
        $.each($("tbody tr"), function () {
            var rowLangId = $(this).attr("data-langId")
            if (langId != rowLangId) {
                $(this).hide();
            } else {
                $(this).show();
            }
        })
    })


    $("select#LanguageId.form-control").change(function () {
        var langId = "lang-" + $(this).val();
        $.each($("tbody tr"), function () {
            var rowLangId = $(this).attr("data-langId")
            if (langId != rowLangId) {
                $(this).hide();
            } else {
                $(this).show();
            }
        })
    })


</script>

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>