<script>
    function jsSendComment() {
        var blogId = $("#blogId").val();
        var name = $("#name").val();
        var email = $("#email1").val();
        var webSite = $("#webSite").val();
        var comment = $("#comment").val();
        if (name == "" || email == "" || email == "" || comment == "") {
            $("#commentError").html('Lütfen zorunlu alanları doldurunuz');
            return;
        }

        $.ajax({
            url: "/Bloglar/SendComment",
            type: "POST",
            data: { BlogId: blogId, UserName: name, UserEmail: email, WebSite: webSite, Comment: comment },
            success: function (result) {
                if (result > 0) {
                    $("#commentError").html('');
                    $(".medium-input").val('');
                    $(".medium-textarea").val('');
                } else {
                    alert('İşleminiz başarısız')
                }
            },
            error: function () {
                //jsError('İşleminiz başarısız')
            }

        })
    }



    function jsSendInfoMail2() {
        var email = $("#email2").val();
        if (email == "") {
            $("#errorMessage").html('Lütfen e-posta alanını doldurunuz');
            return;
        }

        if (!checkEmailAddress(email)) {
            $("#errorMessage").html('Lütfen uygun formatta bir e-posta giriniz ');
            return;
        }

        $.ajax({
            url: "/Home/SendInfoMail",
            type: "POST",
            data: { Mail: email },
            success: function (result) {
                if (result > 0) {
                    $("#errorMessage").html('');
                    $("#email2").val('');
                } else {
                    alert('İşleminiz başarısız');
                }
            },
            error: function () {
                alert('İşleminiz başarısız');
            }

        })
    }

    function checkEmailAddress(emailAddress) {
        var reg = new RegExp(/^[^0-9][a-zA-z0-9_]+([.][a-zA-z0-9_]+)*[@@][a-zA-z0-9_]+([.][a-zA-z0-9_]+)*[.][a-zA-Z]{2,4}$/i);
        return reg.test(emailAddress);
    };

</script>