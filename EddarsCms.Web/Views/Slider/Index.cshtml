    });


    $("#LanguageId").change(function () {
        var langId = $(this).val();
        $.ajax({
            url: "/Slider/GetByLangId",
            type: "POST",
            data: { id: langId },
            success: function (result) {
                if (result.State == 1) {
                    $("table tbody").html("");
