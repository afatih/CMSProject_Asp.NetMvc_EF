@using EddarsCms.Dto.BasicDtos
@using EddarsCms.BLL.Services

@model List<SellerDto>
@{
    ViewBag.Title = "Bayi Ayarları";
    ViewBag.PageTitle = "Bayi Ayarları";

    LanguageService langServ = new LanguageService();
    var languages = langServ.GetAll().Result;

}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.js"></script>

<div class="row">
    <div class="col-sm-8 float-left">
        <a href="@Url.Action("Create","Seller")" class="btn btn-primary">Yeni ekle</a>
    </div>
    <div class="form-group float-right col-sm-4">
        <label for="LanguageId" class="col-sm-3 control-label" style="padding-top: 8px;padding-left:40px">Dil</label>
        <div class="col-sm-6">
            <select class="form-control" id="LanguageId" name="LanguageId">
                @if (languages != null)
                {
                    if (languages.Count > 0)
                    {
                        foreach (var language in languages)
                        {
                            <option value="@language.Id">@language.Name</option>
                        }
                    }
                }
            </select>
        </div>
    </div>
</div>

@Html.Raw(ViewBag.Message)

<div class="col-lg-12">
    <table class="table">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Sıra No</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr id="row-@item.Id" data-langId="lang-@item.LanguageId" data-id="@item.Id">
                            <td>@item.Name</td>
                            <td width="10%" class="rowNumber">@item.RowNumber</td>
                            <td width="16%">
                                <button onclick="jsDelete(@item.Id)" class="btn btn-danger">Sil</button>
                                <a href="@Url.Action("Edit","Seller",new {id=item.Id })" class="btn btn-warning">Düzenle</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>


</div>



<script>
    function jsDelete(id) {
        if (confirm('Seçilen öğeyi silmek istediğinize emin misiniz?')) {
            $.ajax({
                url: "/Seller/Delete", type: "POST", data: { id: id }, success: function (result) {
                    if (result.State != 1) {
                        jsError(result.Message);

                    }
                    else {
                        jsSuccess(result.Message);
                        $("#row-" + id).remove();
                    }
                }
            })
        }
    }

    var arr = new Array();


    //tabloyu sortable yapıyoruz..
    $("table tbody").sortable({
        update: function (event, ui) {
            $(this).children().each(function (index) {
                $(this).find('td.rowNumber').html(index + 1)
                var id = $(this).attr("data-id");
                var rowNumber = $(this).find('td.rowNumber').html()


                //mevcut id ve sıra numarasını bir listeye atıyoruz.
                arr.push({ "id": id, "rowNumber": rowNumber });
            });
            console.log(arr);

            $.ajax({
                url: "/Seller/Reorder/",
                type: "POST",
                data: { list: arr },
                success: function (result) {
                    if (result.State == 1) {
                        arr = [];
                        jsSuccess(result.Message);

                    } else {
                        jsError(result.Message);

                    }
                }
            })
        }
    });


    $("#LanguageId").change(function () {
        var langId = $(this).val();
        $.ajax({
            url: "/Seller/GetByLangId",
            type: "POST",
            data: { id: langId },
            success: function (result) {
                if (result.State == 1) {
                    $("table tbody").html("");
                    $.each(result.Result, function (i, v) {


                        var row = " <tr id='row-" + v.Id + "' data-langId='lang-" + v.LanguageId + "' data-id='" + v.Id + "'><td>" + v.Name + "</td><td width='10%' class='rowNumber'>" + v.RowNumber + "</td><td width='16%'><button style='margin:2px' onclick='jsDelete(" + v.Id + ")' class='btn btn-danger'>Sil</button><a style='margin:2px' href='/Management/Seller/Edit/" + v.Id + "' class='btn btn-warning'>Düzenle</a></td></tr>";

                        $("table tbody").append(row);

                    })


                } else {
                    jsError(result.Message);
                }
            }
        })
    })


</script>

