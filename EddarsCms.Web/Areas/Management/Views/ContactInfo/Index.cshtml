@using EddarsCms.Dto.BasicDtos
@using EddarsCms.BLL.Services


@model ContactInfoDto

@{
    ViewBag.Title = "İletişim Ayarları";
    ViewBag.PageTitle = "İletişim Ayarları";
}



<style>
    .main-box .main-box-header {
        font-size: 1.3em;
        line-height: 29px;
        margin: 0;
        padding-bottom: 20px;
        padding-top: 10px;
    }

    .main-box .main-box-body {
        padding-left: 10px;
        padding-right: 10px;
    }

    .form-group div img {
        width: 100px !important;
        margin-bottom: 5px;
        margin-top: 5px;
        margin-right: 5px;
    }
</style>

@Html.Raw(ViewBag.Message)

@using (Html.BeginForm("Index", "ContactInfo", FormMethod.Post, new { @class = "form-horizontal bordered-row", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div id="message"></div>

    <input type="text" style="display:none" name="Id" value="@Model.Id" />


    <div class="row main-box">
        <div class="col-lg-8">
            <div class="panel">
                <div class="panel-body">
                    <div class="main-box-header">
                        <h3>İletişim Bilgileri</h3>
                    </div>
                    <div class="main-box-body">

                        <div class="form-group">
                            <label for="Name" class=" control-label">Şirket Adı</label>
                            <div>
                                <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Phone1" class=" control-label">Şirket Telefon Numarası 1</label>
                            <div>
                                <input type="text" class="form-control" name="Phone1" id="Phone1" value="@Model.Phone1" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Phone2" class=" control-label">Şirket Telefon Numarası 2</label>
                            <div>
                                <input type="text" class="form-control" name="Phone2" id="Phone2" value="@Model.Phone2" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Email" class=" control-label">Şirket E-mail</label>
                            <div>
                                <input type="text" class="form-control" name="Email" id="Email" value="@Model.EMail" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Fax" class=" control-label">Şirket Fax Numarası</label>
                            <div>
                                <input type="text" class="form-control" name="Fax" id="Fax" value="@Model.Fax" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="MapLocation" class=" control-label">Şirket Harita Lokasyonu</label>
                            <div>
                                <input type="text" class="form-control" name="MapLocation" id="MapLocation" value="@Model.MapLocation" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Adress" class=" control-label">Şirket Adres</label>
                            <div>
                                <textarea class="form-control" name="Adress" id="Adress" rows="5">@Model.Adress</textarea>
                            </div>
                        </div>

                        @*<div class="form-group">
                            <label for="Description" class=" control-label">Şirket Hakkında</label>
                            <div>
                                <textarea class="form-control" name="Description" id="Description" rows="5">@Model.Description</textarea>
                            </div>
                        </div>*@

                    </div>
                </div>
            </div>
        </div>


        <input type="text" style="display:none" name="CurrentImage" value="@Model.Image" />

        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="main-box-header">
                        <h3>Görsel Ayarları</h3>
                    </div>
                    <div class="main-box-body">
                        <div class="form-group">
                            <div>
                                <img src="~/Images/ContactInfos/@Model.Image" />
                            </div>
                            <label for="image" class=" control-label">Şirket Resim</label>
                            <div>
                                <input type="file" class="form-control" id="image" name="file">
                            </div>
                            <div><button style="margin-top:10px" type="submit" class="btn btn-success">Kaydet</button></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="main-box-header">
                        <h3>Ana Sayfa Seo Ayarları</h3>
                    </div>
                    <div class="main-box-body">
                        <div class="form-group">
                            <label for="SeoTitle" class="float-left control-label ">Seo Title</label>
                            <div>
                                <input type="text" class="form-control" name="SeoTitle" id="SeoTitle" value="@Model.SeoTitle" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="SeoDescription" class="float-left control-label ">Seo Description</label>
                            <div>
                                <textarea type="text" class="form-control" name="SeoDescription" id="SeoDescription" rows="5">@Model.SeoDescription</textarea>
                            </div>
                        </div>

                        <div style="padding-top:10px"><button type="submit" class="btn btn-success">Kaydet</button></div>

                    </div>

                </div>
            </div>
        </div>


    </div>



}


<script>




</script>
